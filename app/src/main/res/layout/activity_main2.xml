<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:background="#000">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:src="@mipmap/commonleftarrow" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:text="连锁店开店大纲"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/imageView_fenxiang"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/commonshare" />

    </RelativeLayout>

    <io.vov.vitamio.widget.VideoView

        android:id="@+id/lol_video"

        android:layout_width="fill_parent"

        android:layout_height="220dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ts_imageren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/courseteachers" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/ts_name"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余春华老师" />

            <TextView
                android:id="@+id/ts_zhiye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="知名美业顾问"
                android:textSize="10dp" />

        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:src="@mipmap/coursevoicebox" />
    </LinearLayout>

    <LinearLayout

    android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:id="@+id/ts_title"
            android:layout_width="wrap_content"
            android:text="连锁门店课程大纲"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:text="知名美业顾问免费教你连锁店开店"
            android:layout_height="wrap_content" />
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="课程简介"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ts_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sssssssss"
        />
</LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
       android:layout_marginTop="20dp"
        android:text="学员评价"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
       android:layout_marginTop="100dp"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <LinearLayout
          android:layout_weight="1"
          android:layout_gravity="center_vertical"
          android:gravity="center_horizontal"
          android:background="#ff00ff"
          android:orientation="vertical"
          android:layout_marginLeft="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
     <ImageView
         android:src="@mipmap/minephone"
         android:layout_width="50dp"
         android:layout_height="wrap_content" />
         <TextView
             android:text="客服"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

      </LinearLayout>
           <LinearLayout
             android:layout_weight="1"
             android:layout_gravity="center_vertical"
             android:gravity="center_horizontal"
             android:background="#ff00ff"
             android:orientation="vertical"
             android:layout_marginLeft="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/minecollection"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

         </LinearLayout>

      <LinearLayout
          android:layout_weight="1"
          android:layout_gravity="center_vertical"
          android:gravity="center_horizontal"
          android:background="#ff00ff"
          android:orientation="vertical"
          android:layout_marginLeft="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
         <ImageView
             android:src="@mipmap/minedownload"
             android:layout_width="50dp"
             android:layout_height="wrap_content" />
         <TextView
             android:text="下载"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

      </LinearLayout>

      <ImageView
          android:layout_weight="1"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="80dp"
          android:src="@mipmap/minesubmissions"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
</LinearLayout>

</LinearLayout>
